<h2>
    <a href="{{ path('repos_user', {username: user.username}) }}">{{ user.username }}</a>
    /
    <a href="{{ path('repo_browse', {username: user.username, repoName: repo.repoName}) }}">{{ repo.repoName }}</a>
    {% if repo.private %}
        <span class="badge badge-danger">Priv√©</span>
    {% else %}
        <span class="badge badge-success">Public</span>
    {% endif %}
    {% if app.user and (repo.collaborators.contains(app.user) or app.user == user) %}
        <span class="badge badge-info">Membre</span>
    {% endif %}
    {% if app.user and app.user.username == user.username %}
        <a class="btn btn-warning float-right" style="margin-left: 4px;"
           href="{{ path ('repo_options', {username: user.username, repoName: repo.repoName}) }}">Options</a>
        <a class="btn btn-warning float-right"
           href="{{ path ('repo_collaborators', {username: user.username, repoName: repo.repoName}) }}">Collaborateurs</a>
    {% endif %}
</h2>


<code>git clone {{ url('repo_browse', {username: user.username, repoName: repo.repoName}) }}.git</code><br>
<code>git remote add origin {{ url('repo_browse', {username: user.username, repoName: repo.repoName}) }}.git</code>
