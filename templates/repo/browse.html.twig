{% extends 'base.html.twig' %}

{% block title %}Repo : {{ user }}/{{ repo }}{% endblock %}

{% block body %}
    <div class="container">

        <h2>
            <a href="{{ path('repos_user', {username: user}) }}">{{ user }}</a>/<a href="{{ path('repo_browse', {username: user, repoName: repo}) }}">{{ repo }}</a>
            {% if app.user and app.user.username == user %}<a class="btn btn-warning float-right" href="{{ path ('repo_options', {username: user, repoName: repo}) }}">Options</a>{% endif %}
        </h2>


        <code>git clone {{ url('repo_browse', {username: user, repoName: repo}) }}.git</code><br>
        <code>git remote add origin {{ url('repo_browse', {username: user, repoName: repo}) }}.git</code>
        <hr>
        {% if nbCommits != 0 %}
            {% if object == 'master' %}
                <a href="{{ path('repo_browse_commits', {username: user, repoName: repo}) }}" class="btn btn-info">Commits ({{ nbCommits }})</a>
            {% else %}
                <a href="{{ path('repo_browse_commits_object', {username: user, repoName: repo, object: object}) }}" class="btn btn-info">Commits ({{ nbCommits }})</a>
            {% endif %}
            <div class="btn-group">
                <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Branches</button>
                <div class="dropdown-menu" style="max-height: 160px; overflow: auto;">
                    {% for branch in branches %}
                        <a class="dropdown-item {% if branch == object %}bg-info text-white{% endif %}" type="button" href="{{ path('repo_browse_commit', {username: user, repoName: repo, object: branch}) }}">{{branch}}</a>
                    {% endfor %}
                </div>
            </div><br><br>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    {% if (path is empty and folder == '') %}
                        <li class="breadcrumb-item active" aria-current="page">{{ repo }}</li>
                    {% else %}
                        {% if object == 'master' %}
                            <li class="breadcrumb-item"><a href="{{ path('repo_browse', {username: user, repoName: repo}) }}">{{ repo }}</a></li>
                        {% else %}
                            <li class="breadcrumb-item"><a href="{{ path('repo_browse_commit', {username: user, repoName: repo, object: object}) }}">{{ repo }}</a></li>
                        {% endif %}
                        {% for foldername in path %}
                            <li class="breadcrumb-item"><a href="{{ path('repo_browse_folder', {username: user, repoName: repo, object: object, folder: foldername}) }}">{{ foldername }}</a></li>
                        {% endfor %}
                        <li class="breadcrumb-item active" aria-current="page">{{ filename }}</li>
                    {% endif %}
                </ol>
            </nav>
            <p>{% if object | length == 40%}Commit{% else %}Branche{% endif %} : <code>{{ object }}</code></p>
            <hr>
            <table class="table table-striped table-hover" style="overflow: auto;">
                {% for file in files %}
                    {% if file[1] == 'blob' %}
                        <tr><td class="bg-info" style="width: 1%; white-space: nowrap;"><i class="fas fa-file-alt" style="color:white;"></i></td><td><a style="color: black;" href="{{ path('repo_get_file', {username: user, repoName: repo, object: object, file: folder ~ file[3]}) }}">{{ file[3] }}</a></td></tr>
                    {% elseif file[1] == 'tree' %}
                        <tr><td class="bg-secondary" style="width: 1%; white-space: nowrap;"><i class="fas fa-folder-open" style="color:white;"></i></td><td><a style="color: black;" href="{{ path('repo_browse_folder', {username: user, repoName: repo, object: object, folder: folder ~ file[3]}) }}">{{ file[3] }}/</a></td></tr>
                    {% endif %}
                {% endfor %}
            </table>
        {% else %}
            <p>Repo vide</p>
        {% endif %}
    </div>
{% endblock %}