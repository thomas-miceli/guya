{% extends 'base.html.twig' %}

{% block title %}Repos de {{ user.username }}{% endblock %}

{% block body %}
    <div class="container">
        <h2>Repos de {{ user.username }}</h2>
        <ul>
            {% for repo in repos %}
                <li><a href="{{ path('repos_user', {user: repo.user.username}) }}">{{ repo.user.username }}</a>/<a href="{{ path('repo_browse', {user: repo.user.username, repo: repo.name}) }}">{{ repo.name }}</a></li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}
